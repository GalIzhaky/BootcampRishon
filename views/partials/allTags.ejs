<div class="col-6 mx-auto d-flex justify-content-s flex-reverse text-end" id="tagContainer"> 
    <!-- Buttons will be dynamically inserted here -->
</div>

<script>
    const fetchData2 = () => {
        fetch('/api/v1/tags')
            .then(response => response.json())
            .then(data => {
                const container = document.getElementById('tagContainer');
                container.innerHTML = ''; // Clear the container

                data.forEach(tag => {
                    const button = document.createElement('button');
                    button.textContent = tag.name;
                    button.style.height = "60px";
                    button.classList.add('btn', 'btn-secondary', 'm-2', 'col-2');
                    button.onclick = () => filterByTag(tag.name); // Trigger filtering on click
                    container.appendChild(button);
                });
            })
            .catch(error => console.error('Error fetching tags:', error));
    }

    const filterByTag = (tag) => {
        const filteredData = allData.filter(training => 
            training.name.includes(tag) || training.description.includes(tag)
        );
        populateFilteredResults(filteredData);
    }

    // Call fetchData2 when the script runs
    fetchData2();
</script>