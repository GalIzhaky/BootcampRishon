<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="register.css">
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/register.css">
    <style>
        body {
            background-image: url('ריאשון.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
    </style>
</head>
<body>
    <%- include('./partials/navbar', {currentPage: 'register'}) %>

    <div class="cardplace">
        <form id="registrationForm" class="card" action="/register" method="POST">
            <h1 class="nicetomeetyou">!נעים להכיר</h1>
            <button type="button" class="x">x</button>
            <label>שם</label><br>
            <input type="text" name="name" class="UserName" required><br>
            <label>דוא"ל</label><br>
            <input type="email" name="email" class="Email" required><br>
            <label>סיסמה</label><br>
            <input type="password" name="password" class="password" required><br>

            <p>כבר נרשמתה?<a href="/login"> התחברות</a></p>
            <button type="submit" class="SubmitButton">הרשמה</button>
        </form>
    </div>

    <script>
        document.getElementById('registrationForm').addEventListener('submit', async function (e) {
            e.preventDefault(); // Prevent default form submission

            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch(this.action, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    // Redirect to welcome.ejs on successful registration
                    window.location.href = '/welcome';
                } else {
                    alert(result.message); // Display error message
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred during registration. Please try again.');
            }
        });
    </script>
</body>
</html>
